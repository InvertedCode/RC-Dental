---
import Layout from '../layouts/Layout.astro';
import EndodonciaRC from '../components/Endodoncia.astro';

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = await getI18N({ currentLocale })
---

<Layout title={i18n.SERVICE_ENDODONTICS}>
    <EndodonciaRC title={i18n.SERVICE_ENDODONTICS} subtitle1={i18n.ENDODONTICS_SUBTITLE_1} text1={i18n.ENDODONTICS_TEXT_1} subtitle2={i18n.ENDODONTICS_SUBTITLE_2} text2={i18n.ENDODONTICS_TEXT_2} subtitle3={i18n.ENDODONTICS_SUBTITLE_3} text3={i18n.ENDODONTICS_TEXT_3} subtitle4={i18n.ENDODONTICS_SUBTITLE_4} text4={i18n.ENDODONTICS_TEXT_4} />
</Layout>