---
interface Props {
  title: string;
  phone: string;
}

const { title, phone } = Astro.props;
---

<section class="w-full h-[82vh] flex flex-col">
    <article class="flex flex-col w-[100vw] h-[100%] overflow-hidden relative">

        <div class="flex flex-col ml-8 mt-6 -z-10">
            <svg xmlns="http://www.w3.org/2000/svg" width="44" height="42" viewBox="0 0 44 42" fill="none">
                <circle cx="11.5" cy="11.5" r="11.5" transform="rotate(90 11.5 11.5)" fill="url(#paint0_linear_324_2)"/>
                <circle cx="19" cy="35" r="7" transform="rotate(90 19 35)" fill="url(#paint1_linear_324_2)"/>
                <circle cx="38" cy="22" r="6" transform="rotate(90 38 22)" fill="url(#paint2_linear_324_2)"/>
                <defs>
                <linearGradient id="paint0_linear_324_2" x1="11.5" y1="0" x2="11.5" y2="23" gradientUnits="userSpaceOnUse">
                <stop stop-color="#7DCAC4"/>
                <stop offset="0.5" stop-color="#399390"/>
                <stop offset="1" stop-color="#2C7575"/>
                </linearGradient>
                <linearGradient id="paint1_linear_324_2" x1="19" y1="28" x2="19" y2="42" gradientUnits="userSpaceOnUse">
                <stop stop-color="#7DCAC4"/>
                <stop offset="0.5" stop-color="#399390"/>
                <stop offset="1" stop-color="#2C7575"/>
                </linearGradient>
                <linearGradient id="paint2_linear_324_2" x1="38" y1="16" x2="38" y2="28" gradientUnits="userSpaceOnUse">
                <stop stop-color="#7DCAC4"/>
                <stop offset="0.5" stop-color="#399390"/>
                <stop offset="1" stop-color="#2C7575"/>
                </linearGradient>
                </defs>
                </svg>
        </div>

        <!-- Contenedor titulo 10% -->
        <div class="pt-3 flex items-center justify-center mt-[-3%]">
            <h1 class="text-3xl font-bold text-colors-darkest text-center">{title}</h1>
        </div>

        <!-- Contenedor de sedes google maps 90% -->
        <div class="flex flex-col mt-7">
            <div class="flex flex-row justify-center gap-14">

                <!-- Contenedor sede Medellin -->
                <article>
                    <h3 class="text-xl font-bold text-colors-darkest text-center mb-4">Medellín</h3>
                    <!-- Contenedor iframe y texto -->
                    <div class="flex flex-col">
                        <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3966.0657697283664!2d-75.5801814957362!3d6.255065886325888!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e442904753e938d%3A0x64cc75e2ba76456a!2sRC%20DENTAL!5e0!3m2!1ses-419!2sco!4v1730175769720!5m2!1ses-419!2sco"
                        title="Mapa de la sede RC Dental en Medellin"
                        width="350"
                        height="250" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"
                        class="mb-3"
                        loading="lazy">
                        </iframe>
                        <div class="flex flex-col text-lg text-pretty font-normal text-colors-almost-black mt-8">
                            <span>Calle 49 b #64b-54 oficina 202 Ed. San Pablo</span>
                            <span>Suramericana Medellín</span>
                            <span>{phone}: +57 3122376546</span>
                            <span>Email: rcdentalmedellin@gmail.com</span>
                        </div>
                    </div>
                </article>

                <!-- Contenedor Sede Manizales -->
                 <article>
                    <h3 class="text-xl font-bold text-colors-darkest text-center mb-4">Manizales</h3>
                    <!-- Contenedor iframe y texto -->
                    <div class="flex flex-col">
                        <iframe 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3974.2972511638786!2d-75.48764842629846!3d5.055484438482449!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e47657933e0cfdd%3A0x679d6c0968249385!2sParque%20M%C3%A9dico%20Manizales!5e0!3m2!1ses-419!2sco!4v1730175866436!5m2!1ses-419!2sco"
                        title="Mapa de la sede RC Dental en Manizales"
                        width="350"
                        height="250"
                        class="mb-3"
                        loading="lazy">
                        </iframe>
                        <div class="flex flex-col text-lg text-pretty font-normal text-colors-almost-black mt-8">
                            <span>Ed. Parque médico, consultorio 501</span>
                            <span>{phone}: +57 3218502134</span>
                            <span>Email: jcrortodoncia@hotmail.com</span>
                        </div>
                    </div>
                 </article>
            </div>

            <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="33" height="44" viewBox="0 0 33 44" fill="none" class="absolute top-[25vh] right-0">
                    <circle cx="7" cy="7" r="7" transform="rotate(180 7 7)" fill="url(#paint0_linear_324_3)"/>
                    <circle cx="26.5" cy="31.5" r="12.5" transform="rotate(180 26.5 31.5)" fill="url(#paint1_linear_324_3)"/>
                    <defs>
                    <linearGradient id="paint0_linear_324_3" x1="7" y1="0" x2="7" y2="14" gradientUnits="userSpaceOnUse">
                    <stop stop-color="#7DCAC4"/>
                    <stop offset="0.5" stop-color="#399390"/>
                    <stop offset="1" stop-color="#2C7575"/>
                    </linearGradient>
                    <linearGradient id="paint1_linear_324_3" x1="26.5" y1="19" x2="26.5" y2="44" gradientUnits="userSpaceOnUse">
                    <stop stop-color="#7DCAC4"/>
                    <stop offset="0.5" stop-color="#399390"/>
                    <stop offset="1" stop-color="#2C7575"/>
                    </linearGradient>
                    </defs>
                    </svg>
            </div>
            <div class="flex items-end -z-10">
                <svg xmlns="http://www.w3.org/2000/svg" width="110%" height="auto" viewBox="0 0 1440 505" fill="none" style="max-width: 3840px;" class="absolute bottom-[-30vh] left-[-5vw]">
                    <path d="M1440 145.31C1440 501.101 1440 505 717.921 505C0 505 0 505 0 149.209C0 -107.584 325.762 50.2708 717.921 50.2708C1110.08 50.2708 1440 -111.483 1440 145.31Z" fill="#D7F0ED"/>
                </svg>
            </div>
        </div>
        
    </article>
</section>