---
import Card from "./Card.astro"
import { getLangFromUrl } from "../i18n"

interface Props {
    title2: string;
    subtitle: string;
    service1: string;
    service2: string;
    service3: string;
    service4: string;
    service5: string;
    service6: string;
    service7: string;
}

const { title2, subtitle, service1, service2, service3, service4, service5, service6, service7 } = Astro.props;

const languages = getLangFromUrl(Astro.url);
---

<section class="w-full h-[-120vh] flex flex-col">
    <div class="w-full hidden sm:flex justify-end -z-10">
        <svg xmlns="http://www.w3.org/2000/svg" width="13vw" height="10vw" viewBox="0 0 173 171" fill="none">
            <circle cx="125" cy="46" r="125" transform="rotate(180 125 46)" fill="url(#paint0_linear_157_55)"/>
            <defs>
            <linearGradient id="paint0_linear_157_55" x1="125" y1="-79" x2="125" y2="171" gradientUnits="userSpaceOnUse">
            <stop stop-color="#7DCAC4"/>
            <stop offset="0.5" stop-color="#399390"/>
            <stop offset="1" stop-color="#2C7575"/>
            </linearGradient>
            </defs>
        </svg>
    </div>

    <div class="w-full flex flex-col gap-12 justify-center">
        <div class="text-center mt-[-14vh]">
            <h1 class="text-colors-darkest font-bold text-4xl w-[80%] mx-auto">
                {title2}
            </h1>
            <p class="text-colors-darkest font-normal text-lg w-[80%] mx-auto">
                {subtitle}
            </p>
        </div>

        <div class="hidden sm:flex justify-center">
            <div class="grid gap-x-8 gap-y-4 grid-cols-4">
                <Card 
                    href={`${languages}/orthodontics`}
                    title={service1}
                    img="../../assets/service_icons/ortodoncia.svg"
                    alt="Ortodoncia"
                    icon="../../assets/service_icons/eye.svg"
                />

                <Card 
                    href={`${languages}/invisibleortho`}
                    title={service2}
                    img="../../assets/service_icons/ortodoncia_invisible.png"
                    alt="Ortodoncia invisible"
                    icon="../../assets/service_icons/eye.svg"
                />

                <Card
                    href={`${languages}/oralrehab`}
                    title={service3}
                    img="../../assets/service_icons/rehabilitacion_oral.svg"
                    alt="Rehabilitacion oral"
                    icon="../../assets/service_icons/eye.svg"
                />

                <Card
                    href={`${languages}/implants`}
                    title={service4}
                    img="../../assets/service_icons/implante.svg"
                    alt="Implantes"
                    icon="../../assets/service_icons/eye.svg"
                />

                <div class="col-span-4 flex justify-center gap-8">
                    <Card
                        href={`${languages}/endodontics`}
                        title={service5}
                        img="../../assets/service_icons/endodoncia.png"
                        alt="Protesis"
                        icon="../../assets/service_icons/eye.svg"
                    />

                    <Card
                        href={`${languages}/generaldentistry`}
                        title={service6}
                        img="../../assets/service_icons/odontologia_general.svg"
                        alt="Blanqueamiento dental"
                        icon="../../assets/service_icons/eye.svg"
                    />

                    <Card
                        href={`${languages}/whitening`}
                        title={service7}
                        img="../../assets/service_icons/blanqueamiento_dental.png"
                        alt="Blanqueamiento dental"
                        icon="../../public/assets/service_icons/eye.svg"
                    />
                </div>
            </div>
        </div>
    </div>

    <div class="w-full flex mt-[-14vh] -z-10">
        <svg xmlns="http://www.w3.org/2000/svg" width="14vw" height="14vw" viewBox="0 0 176 137" fill="none">
            <circle cx="51" cy="125" r="125" fill="url(#paint0_linear_157_54)"/>
            <defs>
            <linearGradient id="paint0_linear_157_54" x1="51" y1="0" x2="51" y2="250" gradientUnits="userSpaceOnUse">
            <stop stop-color="#7DCAC4"/>
            <stop offset="0.5" stop-color="#399390"/>
            <stop offset="1" stop-color="#2C7575"/>
            </linearGradient>
            </defs>
        </svg>
    </div>
</section>