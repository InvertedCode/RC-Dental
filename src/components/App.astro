---
import Layout from "../layouts/Layout.astro";
import Home from "../components/Home.astro";
import AboutUs from "../components/AboutUs.astro";
import Services from "../components/Services.astro";
import Testimonials from "../components/Testimonials.astro";
import ContactUs from "../components/ContactUs.astro";
import FooterRC from "../components/FooterRC.astro";

import { getI18N } from "../i18n";
const { currentLocale } = Astro;
const i18n = await getI18N({ currentLocale })
---

<Layout title="Home">
  <Home title1={i18n.HOME_TITLE_1} title2={i18n.HOME_TITLE_2} title3={i18n.HOME_TITLE_3} slogan={i18n.HOME_SLOGAN} dr_description={i18n.HOME_DR_DESCRIPTION} />
  <AboutUs title={i18n.ABOUTUS_TITLE} text1={i18n.ABOUTUS_TEXT_1} text2={i18n.ABOUTUS_TEXT_2} />
  <Services title2={i18n.SERVICES_TITLE_2} subtitle={i18n.SERVICES_SUBTITLE} service1={i18n.SERVICE_ORTHODONTICS} service2={i18n.SERVICE_INVISIBLE_ORTHODONTICS} service3={i18n.SERVICE_ORAL_REHABILITATION} service4={i18n.SERVICE_IMPLANTS} service5={i18n.SERVICE_ENDODONTICS} service6={i18n.SERVICE_GENERAL_DENTISTRY} service7={i18n.SERVICE_DENTAL_WHITENING} />
  <Testimonials title={i18n.TESTIMONIALS_TITLE1} />
  <ContactUs title={i18n.CONTACT_TITLE_2} phone={i18n.CONTACT_PHONE}/>
  <FooterRC title={i18n.HEADER_TITLE} />
</Layout>
