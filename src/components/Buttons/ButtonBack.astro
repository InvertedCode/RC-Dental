---
interface Props {
  pathBack: string;
  buttonText: string;
}

const { pathBack, buttonText } = Astro.props;
---

<a href={pathBack}>
    <button class="flex gap-2 rounded-lg bg-colors-medium-dark text-colors-lighter text-sm px-2 py-2 shadow-[4px_6px_4px_rgba(0,0,0,0.25)]">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24"><path fill="#D7F0ED" d="m7.85 13l2.85 2.85q.3.3.288.7t-.288.7q-.3.3-.712.313t-.713-.288L4.7 12.7q-.3-.3-.3-.7t.3-.7l4.575-4.575q.3-.3.713-.287t.712.312q.275.3.288.7t-.288.7L7.85 11H19q.425 0 .713.288T20 12t-.288.713T19 13z"/></svg>
          {buttonText}
    </button>
</a>

<style>
  a {
    text-decoration: none;
  }
  button {
    cursor: pointer;
  }
  button:hover {
    background-color: #D7F0ED;
    color: #0D9488;
  }
  button:hover svg path {
    fill: #0D9488;
  }
  button:focus {
    outline: none;
  }

  @media (min-width: 320px) and (max-width: 639px) {

    a {
      margin: 0;
      gap: -1vh;
    }
    button {
      font-size: 0.8rem;
    }

    button {
      padding: 0.5rem 1rem;
    }


  }
</style>