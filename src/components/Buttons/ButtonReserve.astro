---
const whatsappNumber = import.meta.env.VITE_WHATSAPP_NUMBER || "573122376546"; // Número por defecto o el de entorno
const whatsappMessage = "Hola, me gustaría reservar una consulta";
const whatsappLink = `https://wa.me/${whatsappNumber}?text=${encodeURIComponent(whatsappMessage)}`;

interface Props {
  buttonText: string;
}

const { buttonText } = Astro.props;
---

<a href={whatsappLink} target="_blank" rel="noopener noreferrer">
  <button
    class="rounded-2xl bg-colors-darker text-colors-lightest text-center align-center w-60 h-16 shadow-[4px_6px_4px_rgba(0,0,0,0.25)]"
  >
    {buttonText}
  </button>
</a>