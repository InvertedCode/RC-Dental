---
import { Image } from "astro:assets";

import Logo from '../../public/assets/logo.png';
import PhoneIcon from "./BannerIcons/PhoneIcon.astro";
import LocationIcon from "./BannerIcons/LocationIcon.astro";
import ClockIcon from "./BannerIcons/ClockIcon.astro";
---

<header class="fixed w-full">
    <div class="flex justify-end bg-colors-medium text-colors-lightest items-center py-1/1 px-10">
        <marquee class="flex items-center w-[800px] mt-1" scrollamount="3">
        <p class="inline-flex items-center text-sm font-semibold mr-2 gap-2">
            <PhoneIcon /> +57 312 2376546 
        </p>
        <p class="inline-flex items-center text-sm font-semibold mr-2 gap-2">
            <LocationIcon /> Laureles - Suramericana / Medellín - Colombia
        </p>
        <p class=" inline-flex items-center text-sm font-semibold gap-2">
            <ClockIcon /> Lun - Vie 8am - 5pm / Sab 8am - 1pm
        </p>
        </marquee>
    </div>
    <div>
        <nav class="flex justify-between bg-colors-dark text-colors-light p-10 h-[56px]">
            <div class="flex items-center">
                <a href="/" class="cursor-pointer">
                    <Image src={Logo} alt="Logo" class="logo w-[103px] h-[36px] mr-2" />
                    <!-- <img class="logo w-[103px] h-[36px] mr-2" src={Logo.src} alt="Logo" loading="lazy" /> -->
                </a>
                <a href="/" class="cursor-pointer text-colors-lightest">
                    <p>RC DENTAL CONSULTORIO ODONTOLÓGICO</p>
                </a>
            </div>

            <ul class="flex items-center pr-28 text-lg gap-20">
                <li class="nav-item">
                    <a href="/about" class="cursor-pointer">Sobre Nosotros</a>
                </li>
                <li class="nav-item">
                    <a href="/services" class="cursor-pointer">Servicios</a>
                </li>
                <li class="nav-item">
                    <a href="/testimonials" class="cursor-pointer">Testimonios</a>
                </li>
                <li class="nav-item">
                    <a href="/contact" class="cursor-pointer">Contactos</a>
                </li>
            </ul>
        </nav>
    </div>
</header>