---
import { Image } from "astro:assets";
import ImageReception from "../../public/assets/recepcion_rc.png";

interface Props {
  title: string;
  text1: string;
  text2: string;
}

const { title, text1, text2 } = Astro.props;
---

<section class="w-full h-screen flex flex-col">
  <div class="flex flex-col h-[100%] overflow-hidden relative">

    <!-- Contenedor de decorativo mobile -->
    <div class="w-full flex sm:hidden container-ellipse-left mt-[-3vh] ml-[83%] -z-10">
      <svg width="74" height="127" viewBox="0 0 74 127" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="52.5" cy="52.5" r="52.5" transform="rotate(180 52.5 52.5)" fill="url(#paint0_linear_0_1)"/>
        <circle cx="49" cy="115" r="5" transform="rotate(180 49 115)" fill="url(#paint1_linear_0_1)"/>
        <circle cx="59" cy="123" r="4" transform="rotate(180 59 123)" fill="url(#paint2_linear_0_1)"/>
        <circle cx="61" cy="114" r="4" transform="rotate(180 61 114)" fill="url(#paint3_linear_0_1)"/>
        <defs>
        <linearGradient id="paint0_linear_0_1" x1="52.5" y1="0" x2="52.5" y2="105" gradientUnits="userSpaceOnUse">
        <stop stop-color="#AEE1DB"/>
        <stop offset="0.5" stop-color="#7DCAC4"/>
        <stop offset="1" stop-color="#53AEAA"/>
        </linearGradient>
        <linearGradient id="paint1_linear_0_1" x1="49" y1="110" x2="49" y2="120" gradientUnits="userSpaceOnUse">
        <stop stop-color="#AEE1DB"/>
        <stop offset="0.5" stop-color="#7DCAC4"/>
        <stop offset="1" stop-color="#53AEAA"/>
        </linearGradient>
        <linearGradient id="paint2_linear_0_1" x1="59" y1="119" x2="59" y2="127" gradientUnits="userSpaceOnUse">
        <stop stop-color="#AEE1DB"/>
        <stop offset="0.5" stop-color="#7DCAC4"/>
        <stop offset="1" stop-color="#53AEAA"/>
        </linearGradient>
        <linearGradient id="paint3_linear_0_1" x1="61" y1="110" x2="61" y2="118" gradientUnits="userSpaceOnUse">
        <stop stop-color="#AEE1DB"/>
        <stop offset="0.5" stop-color="#7DCAC4"/>
        <stop offset="1" stop-color="#53AEAA"/>
        </linearGradient>
        </defs>
      </svg>        
    </div>

    <!-- Contenedor titulo 10% -->
    <div class="container-title mt-5 mb-5">
      <h1 class="text-3xl font-bold text-colors-darkest text-center">
        {title}
      </h1>
    </div>

    <!-- Contenedor de la imagen mobile -->
    <div class="mt-[4%] justify-center align-center flex sm:hidden mb-8">
      <Image
        src={ImageReception}
        alt="Recepcion de RC Dental"
        class="rounded-2xl w-[86%] h-[25vh]"
      />
    </div>

    <!-- Contenedor del texto e imagen de recepcion -->
    <div class="flex flex-col justify-around items-center">
      <div class="container-description w-[40%] text-center">
        <p class="description text-lg font-normal text-colors-almost-black mb-8">
          {text1}
        </p>
        <p class="text-lg font-normal text-colors-almost-black">
          {text2}
        </p>
      </div>

      <!-- Contenedor de la imagen de la recepciÃ³n -->
      <div class="mt-[4%] hidden sm:flex">
        <Image
          src={ImageReception}
          alt="Recepcion de RC Dental"
          class="rounded-2xl w-[100%] h-[17vw]"
        />
      </div>
    </div>

    <!-- Circulos izquierda -->
    <div class="w-full hidden sm:flex container-ellipse-left mt-[-14%] ml-[83%] -z-10">
      <svg width="266" height="314" viewBox="0 0 266 314" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="207" cy="271" r="207" fill="url(#paint0_linear_126_330)"/>
        <circle cx="217.5" cy="35.5" r="14.5" fill="url(#paint1_linear_126_330)"/>
        <circle cx="243.5" cy="11.5" r="11.5" fill="url(#paint2_linear_126_330)"/>
        <circle cx="256" cy="48" r="16" fill="url(#paint3_linear_126_330)"/>
        <defs>
        <linearGradient id="paint0_linear_126_330" x1="207" y1="64" x2="207" y2="478" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        <linearGradient id="paint1_linear_126_330" x1="217.5" y1="21" x2="217.5" y2="50" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        <linearGradient id="paint2_linear_126_330" x1="243.5" y1="0" x2="243.5" y2="23" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        <linearGradient id="paint3_linear_126_330" x1="256" y1="32" x2="256" y2="64" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        </defs>
        </svg>
    </div>

    <!-- Circulos derecha -->
    <div class="w-full hidden sm:flex container-ellipse-right -z-10 mt-[-40%]">
      <svg width="200" height="430" viewBox="0 0 249 480" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="42" cy="207" r="207" fill="url(#paint0_linear_126_325)"/>
        <circle cx="60.7738" cy="432.852" r="14.5" transform="rotate(158.173 60.7738 432.852)" fill="url(#paint1_linear_126_325)"/>
        <circle cx="45.5609" cy="464.498" r="11.5" transform="rotate(158.173 45.5609 464.498)" fill="url(#paint2_linear_126_325)"/>
        <circle cx="20.3861" cy="435.262" r="16" transform="rotate(158.173 20.3861 435.262)" fill="url(#paint3_linear_126_325)"/>
        <defs>
        <linearGradient id="paint0_linear_126_325" x1="42" y1="0" x2="42" y2="414" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        <linearGradient id="paint1_linear_126_325" x1="60.7738" y1="447.352" x2="60.7738" y2="418.352" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        <linearGradient id="paint2_linear_126_325" x1="45.5609" y1="475.998" x2="45.5609" y2="452.998" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        <linearGradient id="paint3_linear_126_325" x1="20.3861" y1="451.262" x2="20.3861" y2="419.262" gradientUnits="userSpaceOnUse">
        <stop stop-color="#399390"/>
        <stop offset="0.5" stop-color="#2C7575"/>
        <stop offset="1" stop-color="#265F5F"/>
        </linearGradient>
        </defs>
        </svg>
    </div>

    <!-- Contenedor de la ellipse -->
    <div class="w-100% -z-10 flex sm:hidden mt-[-28vh] ml-[-10vw]">
      <svg width="219" height="296" viewBox="0 0 219 296" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="33" cy="186" r="186" fill="url(#paint0_linear_136_473)"/>
        <defs>
        <linearGradient id="paint0_linear_136_473" x1="33" y1="0" x2="33" y2="372" gradientUnits="userSpaceOnUse">
        <stop stop-color="#53AEAA" stop-opacity="0.2"/>
        <stop offset="0.5" stop-color="#53AEAA" stop-opacity="0.6"/>
        <stop offset="1" stop-color="#399390"/>
        </linearGradient>
        </defs>
        </svg>            
    </div>


</section>

<style>
  @media (min-width: 320px) and (max-width: 640px)  {
    section {
      width: 100%;
      height: auto;
    }

    .container-title {
      margin: -8vh 0 6vh 0;
    }

    .container-description {
      width: 76%;
      margin: 4vh 0 3vh 0;
    }

    .description {
      text-align: start;
    }
  }
</style>